{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="vh-100">
  <div class="container">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <div class="container mt-5">
            <h1 class="mb-3">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'Username'}
                }) }}
                {{ form_row(registrationForm.first_name, {
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'First Name'}
                }) }}
                {{ form_row(registrationForm.last_name, {
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'Last Name'}
                }) }}
                {{ form_row(registrationForm.address, {
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'Address'}
                }) }}
                {{ form_row(registrationForm.phonenumber, {
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'Phone Number'}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'form-control rounded-2 mb-3', 'placeholder': 'Password'}
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    'label_attr': {'class': 'form-check-label'},
                    'attr': {'class': 'form-check-input'}
                }) }}

                <button type="submit" class="btn btn-primary btn-block rounded-2 mt-2">Register</button>
            {{ form_end(registrationForm) }}
          </div>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp" alt="Register image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>
{% endblock %}
